<mujoco model="h1 scene">
  <option timestep="0.002" iterations="100" ls_iterations="50" solver="Newton">
      <flag eulerdamp="enable"/>
  </option>
  <option cone="elliptic" impratio="10"/>
  <compiler  meshdir="assets"/>

  <include file="h1_allegro_fixed.xml"/>  
  <include file="push.xml"/>
  
  <statistic center="0 0 1" extent="1.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="60" elevation="-20"/>
  </visual>
  <asset>
    <material name="metal" rgba="0.58 0.58 0.58 1"/>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="red_cube" rgba="1 0 0 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1"/>
    <light pos="0 -0.2 1" dir="0 0.2 -0.8" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <body name="cube" pos="0.27 0 0.315">
      <geom type="box" size="0.25 0.3 0.315" material="red_cube" contype="0" conaffinity="0" group="2"/>
    </body>
    <body name="object" pos="0.65 0 1" euler='-0 0 -0'>
        <freejoint name="free_object"/>
        <inertial pos="0 0 0" mass="0.3" diaginertia="0.001 0.001 0.001"/>
        <geom name="object" type="box" size=".05 .05 .1" rgba="0.67 0.73 0.78 1" class="visual"/>
        <geom name="object_collision" type="box" size=".05 .05 .1" class="collision"/>
    </body>
  </worldbody>

  <equality>
    <weld body1="pelvis" body2="world"/>
    <weld body1="torso_link" body2="world"/>
  </equality>
</mujoco>